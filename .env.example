# Minecraft Elytra Finder Bot - Environment Variables
# =====================================================
# Copy this file to .env and fill in your values.
# NEVER commit the actual .env file with real credentials!

# LemonCloud Server Connection
# ----------------------------
# Server hostname (usually provided by server)
LEMONCLOUD_HOST=play.lemoncloud.net

# Server port (default Minecraft port is 25565)
LEMONCLOUD_PORT=25565

# Minecraft Account Credentials
# -----------------------------
# Your Minecraft username
MC_USERNAME=your_minecraft_username

# Your Minecraft account email (if using Microsoft account)
MC_EMAIL=your_email@example.com

# Your Minecraft account password
# IMPORTANT: Never share this or commit it to version control!
MC_PASSWORD=your_password_here

# Optional: Microsoft OAuth token (preferred over password)
# MC_AUTH_TOKEN=your_oauth_token_here

# Bot Configuration
# -----------------
# Maximum runtime in minutes
BOT_MAX_RUNTIME=120

# Control mode: "scripted" or "rl"
BOT_CONTROL_MODE=scripted

# Enable dry run mode (no actual commands sent)
BOT_DRY_RUN=false

# Logging
# -------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Output file for Elytra finds
ELYTRA_LOG_FILE=elytra_finds.jsonl
